<WidgetsExample>:
    cols:3
    ToggleButton:
        text:"Toggle"
        on_state:root.on_toggle_button(self)
        size_hint: None, 1
        width:"90dp"
    Button:
        text: "Count"
        on_press:root.on_button_press()
        disabled: not root.count_enabled
    Label:
        text: root.My_text
        font_size : "80dp"
        color: 1, .5, 1, 1
    Switch:
        id: My_switch
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width:"100dp"
        active: True
    Slider:
        id: My_id
        min: 0
        max:100
        on_value: root.on_value_press(self)
        orientation: "vertical"
        disabled: not My_switch.active
    BoxLayout:
        Label:
            text: str(int(My_id.value))
            font_size: "50dp"
            color: .2, 1, 1, 1
        ProgressBar:
            max: 100
            value: My_id.value
    TextInput:
        id: My_input
        size_hint: None, 1
        width: "80dp"
        text:"foo"
        multiline: False
    Label:
        text: My_input.text


